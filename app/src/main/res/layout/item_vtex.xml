<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/colorCard"
    android:elevation="2dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_topic_face"
            android:layout_width="@dimen/vtex_image_size"
            android:layout_height="@dimen/vtex_image_size"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_topic_face"
            android:textColor="@color/colorText"
            android:textSize="13sp"
            tools:text="TEST" />

        <TextView
            android:id="@+id/tv_topic_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_topic_face"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/iv_topic_face"
            android:textColor="@color/topic_text"
            android:textSize="12sp"
            tools:text="TEST" />

        <TextView
            android:id="@+id/tv_topic_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:drawablePadding="5dp"
            android:drawableStart="@mipmap/ic_comment"
            android:gravity="center_vertical"
            android:textColor="@color/topic_text"
            android:textSize="12sp"
            tools:text="12" />

        <TextView
            android:id="@+id/tv_topic_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/tv_topic_comment"
            android:background="@color/node_bg"
            android:paddingBottom="2dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="2dp"
            android:textColor="@color/topic_text"
            android:textSize="12sp"
            tools:text="Python" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        tools:text="TEST" />

</LinearLayout>